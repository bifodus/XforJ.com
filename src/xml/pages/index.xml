<?xml version="1.0" encoding="UTF-8"?>
<page title="XforJ" xmlns="default">
   <css>
      <url>/pages/index.css</url>
   </css>

   <slides controls="true" xmlns="js-slides" xmlns:d="default">
      <slide name="Why_XforJ" speed="300">
         <d:view href="index/InitialView.xml"/>
         <d:script type="text/javascript">
            var disqus_shortname = 'xforj';

            (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
         </d:script>

      </slide>
      <slideGroup name="Sample_Template">
         <slide name="Precompiled">
            <d:view href="index/Precompiled.xml"/>
         </slide>
         <slide name="Compiled">
            <d:view href="index/Compiled.xml"/>
