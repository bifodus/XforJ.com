         <slide name="Try_Me">
            <d:view href="index/TryMe.xml"/>
            <d:script src="@/pages/index.js"></d:script>
            <d:script src="@/xforj/test.js"></d:script>
         </slide>
      </slideGroup>
      <slideGroup name="Documentation">
         <slide name="Concepts">
            <d:view href="index/Concepts.xml"/>
         </slide>
         <slide name="Elements">
            <d:view href="index/Elements.xml"/>
         </slide>
         <slide name="Attributes">
            <d:view href="index/Attributes.xml"/>
         </slide>
         <slide name="Compiling">
            <container xmlns="default">
               <view href="index/Compiling.xml"/>
               <script src="@/xforj/BuildXMLExample.js"></script>
               <script>
                  (function(){var b=+new Date();var a=<document href="../misc/sample_files/build.xml" mode="c"/>;
                  $('#ExampleAntFile').html(site.examples.ant.elementTag(a));if(window.console)console.log(+new Date()-b);
                  })();
               </script>
            </container>
         </slide>
      </slideGroup>

      <slide name="Download">
         <d:view href="index/Download.xml"/>
      </slide>
   </slides>
    
</page>
